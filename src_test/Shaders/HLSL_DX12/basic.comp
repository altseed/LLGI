struct VS_INPUT{
    float value;
};

cbuffer CB : register(b0)
{
  float offset;
};

RWStructuredBuffer<VS_INPUT> read : register(u0);
RWStructuredBuffer<VS_INPUT> write : register(u1);

[numthreads(1, 1, 1)]
void main(uint3 dtid : SV_DispatchThreadID)
{
   write[dtid.x].value = read[dtid.x].value * read[dtid.x].value + offset;
}